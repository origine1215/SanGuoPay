<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ImageView android:src="@drawable/zc_01"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/zc1"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
    </ImageView>
    <ImageView android:src="@drawable/zc_02"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@+id/zc1"
        android:layout_alignParentTop="true">
    </ImageView>
    <EditText android:layout_width="500px"
        android:layout_height="wrap_content"
        android:hint="手机号/邮箱"
        android:textColor="#000000"
        android:id="@+id/zc2"
        android:singleLine="true"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/zc1"
        android:layout_centerHorizontal="true"/>
    <EditText android:layout_width="500px"
        android:layout_height="wrap_content"
        android:hint="登录密码"
        android:textColor="#000000"
        android:id="@+id/zc3"
        android:singleLine="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/zc2"
        android:layout_centerHorizontal="true"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zc4"
        android:textColor="#FF0000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/zc3"
        android:layout_centerHorizontal="true"
        />
    <ImageView android:src="@drawable/zc_12"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/zc5"
        android:scaleType="centerCrop"
        android:layout_below="@+id/zc4"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">
    </ImageView>
</RelativeLayout>